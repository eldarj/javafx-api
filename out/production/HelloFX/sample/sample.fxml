<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<BorderPane fx:controller="sample.Controller"
            xmlns:fx="http://javafx.com/fxml">
    <top>
        <Label text="Welcome to Feedworks FX" alignment="center" BorderPane.alignment="CENTER"/>
    </top>
    <left>
        <Label text="Sidebar" alignment="center"/>
    </left>
    <right>
        <Label text="Right Sidebar" alignment="center"/>
    </right>
    <bottom>
        <HBox spacing="10" alignment="bottom_right" style="-fx-border-color: red; -fx-border-width: 2px; -fx-border-style: dashed;">
            <padding>
                <Insets left="10" top="10" right="10" bottom="10"/>
            </padding>
            <Button text="OK" prefWidth="100"/>
            <Button text="Cancel" prefWidth="100"/>
            <Button text="Help" prefWidth="100"/>
        </HBox>
    </bottom>
</BorderPane>