<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.layout.ColumnConstraints?>
<GridPane fx:controller="sample.Controller"
          xmlns:fx="http://javafx.com/fxml"
          alignment="top_center"
          gridLinesVisible="true"
          hgap="10" vgap="10">
    <padding>
        <Insets top="10" left="10" right="10" bottom="10"/>
    </padding>
    <Label GridPane.halignment="CENTER" text="Welcome to FeedworksFX!" textFill="gold" GridPane.rowIndex="0" GridPane.columnIndex="0" GridPane.columnSpan="2">
        <font>
            <Font name="Times New Roman bold" size="20"/>
        </font>
    </Label>
    <Button text="Button one" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <Button text="Button two" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
    <Button text="Very long button three" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
</GridPane>